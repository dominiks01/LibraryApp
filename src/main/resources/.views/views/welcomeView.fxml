<BorderPane minHeight="300.0" minWidth="400.0" prefHeight="350.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.edu.pl.weedesign.library.controllers.WelcomeController">
   <center>
      <VBox alignment="CENTER" prefHeight="278.0" prefWidth="405.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="30.0" prefWidth="321.0" text="Witaj w naszej bibliotece!" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="60.0" />
               </VBox.margin>
               <font>
                  <Font name="DejaVu Sans Mono Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="42.0" prefWidth="170.0" style="-fx-border-radius: 5px; -fx-background-radius: 5px;" text="Zaloguj się! ">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="FontAwesome" size="18.0" />
               </font>
            </Button>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButton" prefHeight="42.0" prefWidth="170.0" style="-fx-border-radius: 5; -fx-background-radius: 5;" text="Zarejestruj się">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="FontAwesome" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <ToolBar prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <VBox prefHeight="250.0" prefWidth="10.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefHeight="250.0" prefWidth="14.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox prefHeight="9.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
