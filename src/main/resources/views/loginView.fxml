<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.edu.pl.weedesign.library.controllers.LoginController">
   <center>
      <AnchorPane maxHeight="-Infinity" maxWidth="400.0" minWidth="300.0" prefHeight="950.0" prefWidth="400.0" BorderPane.alignment="CENTER">
              <children>
            <VBox alignment="CENTER" prefWidth="400.0" spacing="10.0">
               <children>
                  <Label alignment="TOP_RIGHT" contentDisplay="CENTER" minWidth="-Infinity" text="Sign In">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                        <TextField fx:id="loginField" prefHeight="36.0" promptText="Email" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                        <PasswordField fx:id="loginPasswordField" prefHeight="36.0" promptText="Password" />
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" text="Bad login or password" textFill="RED" visible="false" />
                              <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleLoginAction" prefHeight="36.0" prefWidth="500.0" style="-fx-background-radius: 5;" text="Sign in" />
                     </children>
                  </VBox>
                  <Label fx:id="signUp" onMouseClicked="#signUpButtonClicked" text="New to LibraryApp? Sign Up" textFill="#9e9eff" underline="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="50.0" right="50.0" top="250.0" />
               </padding>
            </VBox>
              </children>
      </AnchorPane>
   </center>
   <top>
      <Pane maxHeight="0.0" maxWidth="0.0" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefWidth="900.0" style="-fx-background-color: linear-gradient(to top left, #ff7f50, #6a5acd);};" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane maxHeight="0.0" maxWidth="0.0" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
